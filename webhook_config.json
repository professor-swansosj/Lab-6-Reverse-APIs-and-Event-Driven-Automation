{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "reload": true
  },
  "apis": {
    "dad_jokes": {
      "url": "https://icanhazdadjoke.com/",
      "headers": {
        "Accept": "application/json"
      }
    },
    "deck_of_cards": {
      "base_url": "https://deckofcardsapi.com/api",
      "endpoints": {
        "new_deck": "/deck/new/",
        "draw_cards": "/deck/{deck_id}/draw/",
        "shuffle": "/deck/{deck_id}/shuffle/"
      }
    }
  },
  "security": {
    "max_payload_size": 1048576,
    "rate_limit": {
      "requests_per_minute": 60
    }
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
}